# Environment Configuration for AI Hardware Co-Design Playground
# Copy this file to .env and update with your actual values

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production
API_HOST=0.0.0.0
API_PORT=8000
DOMAIN=localhost

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=codesign_playground
POSTGRES_USER=codesign
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://codesign:${POSTGRES_PASSWORD}@postgres:5432/codesign_playground

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log
ACCESS_LOG_FILE=/app/logs/access.log
ERROR_LOG_FILE=/app/logs/error.log

# =============================================================================
# Monitoring Configuration
# =============================================================================
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_METRICS_ENABLED=true

# =============================================================================
# Application Features
# =============================================================================
# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500
MODEL_CACHE_TTL_SECONDS=7200
ACCELERATOR_CACHE_TTL_SECONDS=1800

# Model Processing
MAX_MODEL_SIZE_MB=500
SUPPORTED_FRAMEWORKS=pytorch,tensorflow,onnx
DEFAULT_PRECISION=fp32

# Hardware Configuration
DEFAULT_COMPUTE_UNITS=64
DEFAULT_FREQUENCY_MHZ=200
DEFAULT_DATAFLOW=weight_stationary
MAX_PARALLEL_DESIGNS=8

# =============================================================================
# Production Configuration
# =============================================================================
# Server Configuration
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
TIMEOUT=120
KEEPALIVE=2

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/domain.crt
SSL_KEY_PATH=/etc/ssl/private/domain.key

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-grafana-password

# =============================================================================
# Resource Limits
# =============================================================================
# Memory Management
MAX_MEMORY_USAGE_MB=2048
GC_THRESHOLD_MB=1024
MEMORY_CLEANUP_INTERVAL_MINUTES=30

# Request Limits
MAX_REQUEST_SIZE_MB=100
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_SECONDS=300

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_MODEL_OPTIMIZATION=true
ENABLE_HARDWARE_SYNTHESIS=true
ENABLE_PERFORMANCE_PROFILING=true
ENABLE_PARALLEL_PROCESSING=true
ENABLE_ADVANCED_CACHING=true
ENABLE_METRICS_COLLECTION=true