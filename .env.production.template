# AI Hardware Co-Design Playground - Production Environment Configuration
# Copy this file to .env.production and update values for your deployment

# ============================================================================
# Build Configuration
# ============================================================================
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse HEAD)
VERSION=$(git describe --tags --abbrev=0 2>/dev/null || echo "latest")
BUILD_ENV=production

# ============================================================================
# Registry and Image Configuration
# ============================================================================
REGISTRY=your-registry.com
IMAGE_TAG=${VERSION}

# ============================================================================
# Domain and SSL Configuration
# ============================================================================
DOMAIN=codesign.yourdomain.com
ACME_EMAIL=admin@yourdomain.com
ALLOWED_HOSTS=codesign.yourdomain.com,yourdomain.com

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_PASSWORD=your_super_secure_postgres_password_here
POSTGRES_REPLICATION_PASSWORD=your_replication_password_here
# Database performance tuning (adjust based on your hardware)
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=your_super_secure_redis_password_here
REDIS_CLUSTER_MODE=sentinel
REDIS_SENTINEL_SERVICE_NAME=mymaster

# ============================================================================
# Application Security
# ============================================================================
SECRET_KEY=your_super_secure_secret_key_min_32_chars_required
JWT_SECRET=your_jwt_secret_key_for_token_signing
ENCRYPTION_KEY=your_32_byte_encryption_key_for_data_encryption

# ============================================================================
# Performance Configuration
# ============================================================================
API_WORKERS=4
LOG_LEVEL=INFO
CACHE_SIZE_MB=512
MAX_REQUEST_SIZE=100MB

# ============================================================================
# Monitoring and Observability
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password
ELASTIC_PASSWORD=your_elasticsearch_password

# ============================================================================
# Security and Compliance
# ============================================================================
VAULT_ROOT_TOKEN=your_vault_root_token
COMPLIANCE_REGION=global  # Options: global, eu, us, apac
AUDIT_LEVEL=detailed      # Options: basic, detailed, verbose

# ============================================================================
# Backup Configuration
# ============================================================================
S3_BACKUP_ENABLED=false
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_32_bytes

# ============================================================================
# Storage Paths
# ============================================================================
DATA_PATH=/opt/codesign/data
BACKUP_PATH=/opt/codesign/backups
LOG_PATH=/opt/codesign/logs

# ============================================================================
# Multi-Region Configuration (if applicable)
# ============================================================================
ENABLE_MULTI_REGION=false
PRIMARY_REGION=us-east-1
REPLICA_REGIONS=us-west-2,eu-west-1

# ============================================================================
# Edge Computing Configuration
# ============================================================================
ENABLE_EDGE_DEPLOYMENT=false
EDGE_LOCATIONS=us-east,us-west,eu-central,ap-southeast

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_VALIDATION=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_APM=true
ENABLE_BACKUP=true
ENABLE_COMPLIANCE_AUDIT=true

# ============================================================================
# Resource Limits (Docker Swarm Mode)
# ============================================================================
API_CPU_LIMIT=2.0
API_MEMORY_LIMIT=4G
API_CPU_RESERVATION=1.0
API_MEMORY_RESERVATION=2G

WORKER_CPU_LIMIT=2.0
WORKER_MEMORY_LIMIT=3G
WORKER_CPU_RESERVATION=0.5
WORKER_MEMORY_RESERVATION=1G

DB_CPU_LIMIT=2.0
DB_MEMORY_LIMIT=4G
DB_CPU_RESERVATION=1.0
DB_MEMORY_RESERVATION=2G

REDIS_CPU_LIMIT=1.0
REDIS_MEMORY_LIMIT=1.5G
REDIS_CPU_RESERVATION=0.2
REDIS_MEMORY_RESERVATION=512M

# ============================================================================
# High Availability Configuration
# ============================================================================
ENABLE_HA=true
HA_MODE=active-active  # Options: active-passive, active-active
DISCOVERY_SERVICE=consul  # Options: consul, etcd, kubernetes
LOAD_BALANCER_TYPE=global  # Options: regional, global
FAILOVER_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# Kubernetes Configuration (if using Kubernetes)
# ============================================================================
KUBE_NAMESPACE=codesign-production
KUBE_CONTEXT=production-cluster
STORAGE_CLASS=fast-ssd
ENCRYPTED_STORAGE_CLASS=encrypted-ssd

# ============================================================================
# CDN and Global Distribution
# ============================================================================
CDN_ENABLED=false
CDN_PROVIDER=cloudfront  # Options: cloudfront, cloudflare, fastly
CDN_ORIGIN_DOMAIN=api.codesign.yourdomain.com

# ============================================================================
# Compliance and Data Governance
# ============================================================================
GDPR_ENABLED=true
CCPA_ENABLED=true
PDPA_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOGGING_ENABLED=true
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true

# ============================================================================
# Disaster Recovery Configuration
# ============================================================================
DR_ENABLED=true
DR_RTO_MINUTES=60        # Recovery Time Objective
DR_RPO_MINUTES=15        # Recovery Point Objective
BACKUP_FREQUENCY_HOURS=6
BACKUP_RETENTION_DAYS=90
CROSS_REGION_BACKUP=true

# ============================================================================
# Development and Testing (Production debugging)
# ============================================================================
DEBUG=false
PROFILING_ENABLED=false
LOAD_TEST_ENABLED=false
CHAOS_ENGINEERING_ENABLED=false

# ============================================================================
# External Integrations
# ============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# ============================================================================
# Custom Configuration
# ============================================================================
# Add your custom environment variables here
CUSTOM_FEATURE_FLAG_1=true
CUSTOM_INTEGRATION_ENDPOINT=https://api.custom-service.com
CUSTOM_API_KEY=your_custom_api_key