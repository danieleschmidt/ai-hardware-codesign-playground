# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
max_line_length = 88
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# Verilog/SystemVerilog files
[*.{v,sv,vh,svh}]
indent_size = 2
max_line_length = 120

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 4

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 0

# License files
[LICENSE*]
trim_trailing_whitespace = false