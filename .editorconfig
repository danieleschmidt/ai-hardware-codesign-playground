# EditorConfig helps maintain consistent coding styles
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false